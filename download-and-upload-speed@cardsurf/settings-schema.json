{	
	"settings_start" : {
		"type" : "separator"
	},
	"configuration": {
		"type": "header",
		"description": "Configuration"
	},
	"update_every": {
		"type": "spinbutton",
		"default": 1.0,
		"min": 0.0,
		"max": 60.0,
		"step": 0.1,
		"units": "seconds",
		"description": "Update every"
	},
	"configuration_end" : {
		"type" : "separator"
	},
	"gui_start": {
		"type": "header",
		"description": "Gui"
	},


	"gui_type" : {
		"type": "combobox",
		"default" : 0,
		"description" : "Type",
		"options" : {
		    "Compact" : 0,
		    "Large" : 1
		},
		"tooltip" : "Applet Gui"
	},
	"gui_received_icon_filename" : {
		"type": "combobox",
		"default" : "arrow_down_blue.svg",
		"description" : "Download icon",
		"options" : {
		    "Blue" : "arrow_down_blue.svg",
		    "Red" : "arrow_down_red.svg",
		    "Green" : "arrow_down_green.svg"
		},
		"tooltip" : "Applet Gui"
	},
	"gui_sent_icon_filename" : {
		"type": "combobox",
		"default" : "arrow_up_red.svg",
		"description" : "Upload icon",
		"options" : {
		    "Blue" : "arrow_up_blue.svg",
		    "Red" : "arrow_up_red.svg",
		    "Green" : "arrow_up_green.svg"
		},
		"tooltip" : "Applet Gui"
	},
	"gui_text_css": {
		"type": "entry",
		"default": "font-weight: bold;",
		"description": "Text CSS ",
		"tooltip": "A CSS style that will be applied to a text in the panel"
	},
	"gui_end" : {
		"type" : "separator"
	},

	"hover_popup_start": {
		"type": "header",
		"description": "Hover popup"
	},
	"show_hover" : {
		"type" : "checkbox",
		"default" : true,
		"description": "Enable hover popup",
		"tooltip": "Show a hover popup with total bytes downloaded and uploaded"
	 },
	"hover_popup_text_css": {
		"type": "entry",
		"default": "font-size: 15px; padding: 5px; font-weight: normal;",
		"description": "Text CSS ",
		"tooltip": "A CSS style that will be applied to a description text in the hover popup"
	},
	"hover_popup_numbers_css": {
		"type": "entry",
		"default": "font-size: 15px; padding: 5px; font-weight: bold;",
		"description": "Numbers CSS ",
		"tooltip": "A CSS style that will be applied to numbers in the hover popup"
	},
	"hover_popup_end" : {
		"type" : "separator"
	},


	"terminal_start": {
		"type": "header",
		"description": "Terminal"
	},
	 "launch_terminal" : {
		"type" : "checkbox",
		"default" : true,
		"description": "List current Internet connections on click",
		"tooltip": "Open a terminal with a list of current connections on a left mouse click. The next click closes the terminal."
	 },
	"list_connections_command": {
		"type": "entry",
		"default": "watch -n 1 lsof -i",
		"description": "Command ",
		"tooltip": "A command used to list current Internet connections"
	},
	"terminal_end": {
		"type" : "separator"
	},


	"network_interface" : {
		"type": "generic",
		"default" : "eth0"
	}
}
