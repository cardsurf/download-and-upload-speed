{	
	"settings_start" : {
		"type" : "separator"
	},
	"configuration": {
		"type": "header",
		"description": "Configuration"
	},
	"update_every": {
		"type": "spinbutton",
		"default": 1.0,
		"min": 0.0,
		"max": 60.0,
		"step": 0.1,
		"units": "seconds",
		"description": "Update every"
	},
	"configuration_end" : {
		"type" : "separator"
	},
	"gui_start": {
		"type": "header",
		"description": "Gui"
	},


	"gui_type" : {
		"type": "combobox",
		"default" : 0,
		"description" : "Type",
		"options" : {
		    "Compact" : 0,
		    "Large" : 1
		},
		"tooltip" : "Applet Gui"
	},
	"decimal_places" : {
		"type": "combobox",
		"default" : -1,
		"description" : "Decimal places",
		"options" : {
		    "Auto" : -1,
		    "0 " : 0,
			"1 " : 1,
			"2 " : 2,
			"3 " : 3 
		},
		"tooltip" : "Decimal places of download and upload speed shown in the panel"
	},
	"gui_text_css": {
		"type": "entry",
		"default": "font-weight: bold;",
		"description": "Text CSS ",
		"tooltip": "A CSS style applied to the text in the panel"
	},
	"gui_received_icon_filename" : {
		"type" : "filechooser",
		"default" : "~/.local/share/cinnamon/applets/download-and-upload-speed@cardsurf/icons/arrow_down_blue.svg",
		"description" : "Download icon",
		"tooltip": "An icon displayed next to download speed in the panel"
	},
	"gui_sent_icon_filename" : {
		"type" : "filechooser",
		"default" : "~/.local/share/cinnamon/applets/download-and-upload-speed@cardsurf/icons/arrow_up_red.svg",
		"description" : "Upload icon",
		"tooltip": "An icon displayed next to upload speed in the panel"
	},
	"gui_end" : {
		"type" : "separator"
	},

	"hover_popup_start": {
		"type": "header",
		"description": "Hover popup"
	},
	"show_hover" : {
		"type" : "checkbox",
		"default" : true,
		"description": "Enable hover popup",
		"tooltip": "Show the hover popup with total bytes downloaded and uploaded"
	 },
	"hover_popup_text_css": {
		"type": "entry",
		"default": "font-size: 15px; padding: 5px; font-weight: normal;",
		"description": "Text CSS ",
		"tooltip": "A CSS style applied to the description text in the hover popup"
	},
	"hover_popup_numbers_css": {
		"type": "entry",
		"default": "font-size: 15px; padding: 5px; font-weight: bold;",
		"description": "Numbers CSS ",
		"tooltip": "A CSS style applied to numbers in the hover popup"
	},
	"hover_popup_end" : {
		"type" : "separator"
	},


	"terminal_start": {
		"type": "header",
		"description": "Terminal"
	},
	 "launch_terminal" : {
		"type" : "checkbox",
		"default" : true,
		"description": "List current Internet connections on a click",
		"tooltip": "Open a terminal with a list of current connections on a left mouse click. The next click closes the terminal."
	 },
	"list_connections_command": {
		"type": "entry",
		"default": "watch -n 1 lsof -i",
		"description": "Command ",
		"tooltip": "A command used to list current Internet connections"
	},
	"terminal_end": {
		"type" : "separator"
	},


	"network_interface" : {
		"type": "generic",
		"default" : "eth0"
	}
}
